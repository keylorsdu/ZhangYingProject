<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_main_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/light" />

    <TextView
        android:id="@+id/tv_main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color" />

    <TextView
        android:id="@+id/tv_main_saturation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saturation" />

    <SeekBar
        android:id="@+id/sb_main_adjust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_main_setlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light" />

        <Button
            android:id="@+id/btn_main_setcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/color" />

        <Button
            android:id="@+id/btn_main_setsaturation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saturation" />
    </LinearLayout>


</LinearLayout>
